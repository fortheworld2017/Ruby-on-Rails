.col-md-4
  .element{style: "background-image: url(#{category.image}"}
    .right-block
      .top-block
        = link_to [category.religion, category], :method => :delete, :data => { :confirm => 'Are you sure you want to delete this?' } do
          = delete_icon
      .bottom-block
        = link_to edit_religion_category_path(category.religion, category) do
          = edit_icon
  .text-center
    %h4
      = link_to religion_category_subcategories_path religion_id: category.religion.id, category_id: category.id do
        %h4
          = category.title
