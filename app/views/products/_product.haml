.col-md-4
  .element{style: "background-image: url(#{product.image}"}
    .right-block
      .top-block
        = link_to [product.subcategory.category.religion, product.subcategory.category, product.subcategory, product], :method => :delete, :data => { :confirm => 'Are you sure you want to delete this?' } do
          = delete_icon
      .bottom-block
        = link_to edit_religion_category_subcategory_product_path(religion_id: product.subcategory.category.religion.id, category_id: product.subcategory.category.id, subcategory_id: product.subcategory.id, id: product.id) do
          = edit_icon
  .text-center
    %h4
      = product.model