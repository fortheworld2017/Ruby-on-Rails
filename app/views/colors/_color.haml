.col-md-4
  .element{style: "background-image: url(#{color.image}"}
    .right-block
      .top-block
        = link_to color, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this?' } do
          = delete_icon
      .bottom-block
        = link_to edit_color_path(color) do
          = edit_icon
  .text-center
    %h4
      = color.title