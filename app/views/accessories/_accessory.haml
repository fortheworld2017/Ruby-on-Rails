.col-md-4
  .element{style: "background-image: url(#{accessory.image}"}
    .right-block
      .top-block
        = link_to accessory, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this?' } do
          = delete_icon
      .bottom-block
        = link_to edit_accessory_path(accessory) do
          = edit_icon
  .text-center
    %h4
      = accessory.title