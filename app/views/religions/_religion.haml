.col-md-4
  .element{style: "background-image: url(#{religion.image}"}
    .right-block
      .top-block
        = link_to religion, :method => :delete, :data => { :confirm => 'Are you sure you want to delete this?' } do
          = delete_icon
      .bottom-block
        = link_to edit_religion_path(id: religion.id) do
          = edit_icon
  .text-center
    = link_to religion_path(id: religion.id) do
      %h4
        = religion.title